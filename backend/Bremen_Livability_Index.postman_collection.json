{
	"info": {
		"_postman_id": "bremen-livability-api",
		"name": "Bremen Livability Index API",
		"description": "API for testing Bremen Livability Index. Scores 0-100 based on 7 factors: Greenery, Amenities, Public Transport, Healthcare (positive) and Accidents, Industrial Areas, Major Roads (negative).",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"let mode = pm.collectionVariables.get(\"environment_mode\");",
					"if (mode === \"local\") {",
					"    pm.collectionVariables.set(\"base_url\", pm.collectionVariables.get(\"local_url\"));",
					"}",
					"else {",
					"    pm.collectionVariables.set(\"base_url\", pm.collectionVariables.get(\"deployed_url\"));",
					"}"
				]
			}
		}
	],
	"item": [
		{
			"name": "Health Check",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/health",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"health"
					]
				},
				"description": "Check API and database health"
			}
		},
		{
			"name": "Root Endpoint",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/",
					"host": [
						"{{base_url}}"
					],
					"path": [
						""
					]
				},
				"description": "Get API information"
			}
		},
		{
			"name": "Analyze - City Center (Marktplatz)",
