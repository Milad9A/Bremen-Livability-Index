					"raw": "{\n    \"query\": \"Bremen Hauptbahnhof\",\n    \"limit\": 3\n}"
				},
				"url": {
					"raw": "{{base_url}}/geocode",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"geocode"
					]
				},
				"description": "Search for landmarks like train stations, universities, or neighborhoods in Bremen."
			}
