{
	"info": {
		"_postman_id": "bremen-livability-api",
		"name": "Bremen Livability Index API",
		"description": "API for testing Bremen Livability Index. Scores 0-100 based on 20 spatial factors: Greenery, Amenities, Public Transport, Healthcare, Bike Infrastructure, Education, Sports & Leisure, Pedestrian Infrastructure, Cultural Venues (positive) and Accidents, Industrial Areas, Major Roads, Noise, Railway, Gas Station, Waste Facility, Power Infrastructure, Parking, Airport, Construction Site (negative).",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"let mode = pm.collectionVariables.get(\"environment_mode\");",
					"if (mode === \"local\") {",
					"    pm.collectionVariables.set(\"base_url\", pm.collectionVariables.get(\"local_url\"));",
					"}",
					"else {",
					"    pm.collectionVariables.set(\"base_url\", pm.collectionVariables.get(\"deployed_url\"));",
					"}"
				]
			}
		}
	],
	"item": [
		{
			"name": "Health Check",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/health",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"health"
					]
				},
				"description": "Check API and database health"
			}
		},
		{
			"name": "Root Endpoint",
			"request": {
